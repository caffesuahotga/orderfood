<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="12">

        <!--                 ảnh sản phẩm-->

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cart_pro_image"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/noti_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/noti"></ImageView>

        </androidx.cardview.widget.CardView>

        <!--                thông tin sản phẩm -->
        <LinearLayout
            android:id="@+id/noti_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cart_product_icon"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/noti_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Đơn Hàng : #11"
                android:textColor="@color/teal_700"
                android:textSize="17dp"
                android:textStyle="bold"></TextView>

            <!--                         giá-->
            <TextView
                android:id="@+id/noti_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Tổng Giá: 30,000 VND"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_gravity="top"
            android:gravity="top|center"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/noti_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="24/07/2024"
                android:textAlignment="center"
                android:textStyle="bold"></TextView>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
