<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xám_nhạt">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/pxfuel"
        tools:context=".services.ProfileActivity">

        <LinearLayout
            android:id="@+id/profile_shipper_page_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="THÔNG TIN"
                android:textColor="#FFFF"
                android:textSize="35dp"
                android:textStyle="bold" />

            <!-- Ảnh đại diện -->
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/avatar_circle_border"
                android:contentDescription="Avatar"
                android:src="@drawable/ic_default_avatar" />
            <TextView
                android:id="@+id/tvTransparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:textSize="20dp" />

            <!-- Các EditText -->
            <TextView
                android:id="@+id/tvUsername"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="Username"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etUsername"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="New Username"
                android:padding="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvName"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="Name"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etName"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="New Name"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etOldPassword"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etPassword"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvPhone"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="Phone"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etPhone"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="New Phone"
                android:padding="10dp"
                android:textSize="20dp" />

            <!-- Nút lưu -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corner"
                android:text="Lưu thông tin"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corner"
                android:text="ĐĂNG XUẤT"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>