<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"> >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Category Name"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"

            android:text="10.000 VND"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Lượt đánh giá: "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/product_count_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="4500 lượt "

                android:textSize="10dp" />

            <TextView

                android:id="@+id/product_rate_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text=" 4.6"

                android:textSize="10dp" />

            <ImageView

                android:id="@+id/starImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView

                android:id="@+id/count_favorite"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"


                android:gravity="center"
                android:text=" 4.6"

                android:textSize="15dp" />

            <ImageView
                android:id="@+id/btnAddFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"

                android:contentDescription="Icon Start"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_favorite_24" />

            <ImageView
                android:id="@+id/btnAddCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="Icon End"
                android:padding="8dp"
                android:src="@drawable/icon_cart_2" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
