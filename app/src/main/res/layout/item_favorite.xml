<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="12">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cart_pro_image"
            android:layout_width="160dp"
            android:layout_height="160dp"

            android:layout_weight="3"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/favorite_product_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/com_suong"></ImageView>

        </androidx.cardview.widget.CardView>

        <!--                thông tin sản phẩm -->
        <LinearLayout
            android:id="@+id/cart_info_product"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cart_product_icon"
            android:layout_weight="7.5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/favorite_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Món Món"
                android:textColor="@color/tieu_de_mon_an"
                android:textSize="17dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/favorite_pro_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Giá: 30,000 VND"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/favorite_count_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=" 4.6"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/starImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:contentDescription="Icon Start"
                            android:padding="8dp"
                            android:src="@drawable/star_rating" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=" Ghi chú"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/favorite_description_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="Icon End"
                            android:padding="8dp"
                            android:src="@drawable/icon_description" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp">


                    <ImageView
                        android:id="@+id/btnDeleteFavorite"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"


                        android:contentDescription="Icon Start"
                        android:padding="8dp"
                        android:src="@drawable/icon_favorite_remove" />

                    <ImageView
                        android:id="@+id/btnAddCart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="Icon End"
                        android:padding="8dp"
                        android:src="@drawable/icon_cart_2" />
                </RelativeLayout>

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
