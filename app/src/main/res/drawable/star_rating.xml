<!-- res/drawable/star_rating.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ngôi sao viền trắng hoặc màu xám nhạt -->
    <item android:id="@+id/star_empty">
        <vector android:autoMirrored="true" android:height="24dp"
            android:tint="#D3D3D3" android:viewportHeight="24"
            android:viewportWidth="24" android:width="24dp">
            <path android:fillColor="@android:color/white" android:pathData="M14.43,10l-2.43,-8l-2.43,8l-7.57,0l6.18,4.41l-2.35,7.59l6.17,-4.69l6.18,4.69l-2.35,-7.59l6.17,-4.41z"/>
        </vector>
    </item>

    <!-- Ngôi sao màu vàng được clip từ trái sang phải -->
    <item android:id="@+id/star_filled">
        <clip
            android:drawable="@drawable/ic_baseline_star_rate_24"
        android:gravity="left" />
    </item>
</layer-list>
